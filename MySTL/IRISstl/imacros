#ifndef _IMACROS_
#define _IMACROS_

#define _IRIS_BEGIN \
	namespace IRIS {
#define _IRIS_END \
	}

#define _IRIS IRIS::

#define _IRIS_CXX20_CONSTEXPR inline
#define _IRIS_CONSEXCEPT const noexcept
#define _IRIS_ADDRSOF(ARG) __builtin_addressof(ARG)

typedef unsigned __int64 isize_t;
typedef __int64 ioffset_t;

template <class _Value_type>
struct _Base_types {
	using value_type    = _Value_type;
	using size_type     = isize_t;
	using offset_type   = ioffset_t;
	using pointer	    = value_type*;
	using const_pointer = const value_type*;
};

#endif // _IMACROS_
